{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "hartcode-api",
    "labels": {
      "app": "hartcode-api",
      "version": "v1"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "matchLabels": {
        "app": "hartcode-api"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "hartcode-api"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "application",
            "image": "gcr.io/hartonline-cloud/hartcode-api:(TRAVIS_COMMIT)",
            "resources": {
              "limits": {
                "cpu": ".05",
                "memory": "50Mi"
              }
            },
            "ports": [
              {
                "containerPort": 8811
              }
            ],
            "livenessProbe": {
              "httpGet": {
                "port": 8811,
                "path": "/info"
              },
              "initialDelaySeconds": 30,
              "periodSeconds": 3
            }
          }
        ]
      }
    }
  }
}
